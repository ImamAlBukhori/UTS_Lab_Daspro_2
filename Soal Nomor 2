program nomor2_HitungAngka;
uses crt;

var 
n,i,angka : integer;
total,rata2 : real;

begin 
    clrscr;
    write('Masukkan N : '); 
    readln(n);

    total := 0;
    rata2 := 0;

    for i := 1 to n do
    begin
      write('Angka ke-',i,': '); 
      readln(angka);
      total := total + angka;
    end;

    rata2 := total/n;

    writeln('Jumlah Total : ', total:1:0);
    write('Jumlah Rata-rata : ',rata2:1:1);
end.
